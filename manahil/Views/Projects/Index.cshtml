@model IEnumerable<manahil.Models.Project>

@{
    ViewData["TitleHeader"] = "Project";
    Layout = "~/Views/Shared/_AdLayout.cshtml";
}
<style>
    .selected{
        background-color:lawngreen !important;
    }
</style>
<p>
    <a asp-action="CreateMultiple" class="btn btn-success">Add Projects</a>
</p>
<form class="card p-2 table-responsive">
    
    <table id="tbllist" class="display" cellspacing="0" width="100%">
        <thead class="text-nowrap">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ManahilSerial)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Donor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DonorSerial)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GetDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Category)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Contractor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DistributionDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Employee)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CompletedDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PaymentStatus)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Notes)
                </th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody class="text-nowrap">
            @foreach (var item in Model)
            {
                @if (item.EmployeeId == null)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ManahilSerial)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Donor.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DonorSerial)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.GetDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Category.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Contractor.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DistributionDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Employee.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CompletedDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PaymentStatus)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Notes)
                        </td>
                        <td class="text-nowrap">
                            <span data-toggle="tooltip" title="Edit!">
                                @Html.ActionLink(" ", "Edit", new { id = item.ProjectId }, new { @class = "fas fa-edit btn btn-warning btn-xs" })
                            </span>
                            <span data-toggle="tooltip" title="Delete!">
                                @Html.ActionLink(" ", "Delete", new { Id = item.ProjectId }, new { @class = "far fa-trash-alt btn btn-danger btn-xs" })
                            </span>
                        </td>
                    </tr>
                }
                else
                {
                    <tr class="selected">
                        <td>
                            @Html.DisplayFor(modelItem => item.ManahilSerial)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Donor.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DonorSerial)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.GetDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Category.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Contractor.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DistributionDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Employee.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CompletedDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PaymentStatus)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Notes)
                        </td>
                        <td class="text-nowrap">
                            <span data-toggle="tooltip" title="Edit!">
                                @Html.ActionLink(" ", "Edit", new { id = item.ProjectId }, new { @class = "fas fa-edit btn btn-warning btn-xs" })
                            </span>
                            <span data-toggle="tooltip" title="Delete!">
                                @Html.ActionLink(" ", "Delete", new { Id = item.ProjectId }, new { @class = "far fa-trash-alt btn btn-danger btn-xs" })
                            </span>
                        </td>
                    </tr>
                }

            }
        </tbody>
    </table>

</form>

