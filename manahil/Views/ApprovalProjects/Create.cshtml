                {
                    <input type="hidden" value="0" asp-for="ApprovalProjectId" />
                }
                <div class="row">
                    <div class="col-sm-6">
                        <!-- text input -->
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <label asp-for="SerialNo" class="input-group-text"></label>
                                </div>
                                <input asp-for="SerialNo" class="form-control" />
                            </div>
                            <span asp-validation-for="SerialNo" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <!-- text input -->
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <label asp-for="MonumentalNo" class="input-group-text"></label>
                                </div>
                                <input asp-for="MonumentalNo" class="form-control" />
                            </div>
                            <span asp-validation-for="MonumentalNo" class="text-danger"></span>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <label asp-for="ProjectName" class="input-group-text"></label>
                                </div>
                                <input asp-for="ProjectName" class="form-control" />
                            </div>
                            <span asp-validation-for="ProjectName" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">

                    <div class="col-sm-6">
                        <!-- text input -->
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <label asp-for="Donor" class="input-group-text"></label>
                                </div>
                                <input asp-for="Donor" class="form-control" />
                            </div>
                            <span asp-validation-for="Donor" class="text-danger"></span>
                        </div>
                    </div>
