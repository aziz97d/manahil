                        {
                            <li class="nav-header">Management Menu</li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="DepositAccounts" asp-action="DepositView">
                                    <i class="nav-icon far fa-circle"></i>
                                    <p>
                                        Accounts
