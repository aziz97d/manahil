    <script>

        //Toaster Code Start


            var status = @Html.Raw(Json.Serialize(TempData["Status"]));
            var message = @Html.Raw(Json.Serialize(TempData["Message"]));
            if (status != null) {
                if (status == "1") {
                    toastr.success(message);
                }
                else if (status == "2") {
                    toastr.info(message);
                }
                else if (status == "3") {
