@model IEnumerable<manahil.Models.ManageDrive>

@{
    ViewData["TitleHeader"] = "Manage Drive";
    Layout = "~/Views/Shared/_AdLayout.cshtml";
}

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<form class="card p-2 table-responsive">
    <table id="tbllist" class="table table-striped table-bordered table-sm  table-hover" cellspacing="0" width="100%">
        <thead class="text-nowrap">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Donor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Password)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DriveLink)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Donor.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DriveLink)
                </td>

                <td class="text-nowrap">
                    <span data-toggle="tooltip" title="Edit!">
                        @Html.ActionLink(" ", "Edit", new { id = item.ManageDriveId }, new { @class = "fas fa-edit btn btn-warning btn-xs" })
                    </span>
                    <span data-toggle="tooltip" title="Delete!">
                        @Html.ActionLink(" ", "Delete", new { Id = item.ManageDriveId }, new { @class = "far fa-trash-alt btn btn-danger btn-xs" })
                    </span>
                </td>
            </tr>
            }
        </tbody>
    </table>

</form>

