@model IEnumerable<manahil.Models.Cat_Department>


<div class="container-fluid">

    <div class="text-center">
        <div class="row">

            <div class="col">
                @Html.ActionLink("Department Creation", "Create", null, null, new { @class = "btn btn-outline-info btn-block", @id = "btnBack" })
            </div>
            <div class="col">
                <h2 id="styletext">Department List</h2>
            </div>
            <div class="col-lg-7">

            </div>
        </div>
    </div>


    <form class="card p-2 table-responsive">
        <table id="tbllist" class="table table-striped table-bordered table-sm  table-hover" cellspacing="0" width="100%">
            <thead class="text-nowrap">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.DeptCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DeptName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DeptBangla)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Slno)
                    </th>

                    <th>Action</th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DeptCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DeptName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DeptBangla)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Slno)
                    </td>

                    <td class="text-nowrap">
                        <span data-toggle="tooltip" title="Edit!">
                            @Html.ActionLink(" ", "Edit", new { id = item.DeptId }, new { @class = "fas fa-edit btn btn-warning btn-xs", @target = "_blank" })
                        </span>
                        <span data-toggle="tooltip" title="Delete!">
                            @Html.ActionLink(" ", "Delete", new { Id = item.DeptId }, new { @class = "far fa-trash-alt btn btn-danger btn-xs" })
                        </span>
                    </td>
                </tr>
            }
        </table>
        <br />
    </form>
</div>


