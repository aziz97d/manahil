@model manahil.ViewModels.LoginViewModels
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row d-flex justify-content-center mb-lg-5 py-5">
    <div class="col-md-4 border rounded border-success ">
        <form asp-action="Login" asp-route-returnurl="@ViewBag.ReturnUrl" class="p-2">
            <h3 class="text-center text-success d-block">Login</h3>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RememberMe" class="control-label">
                    <input asp-for="RememberMe" />
                    @Html.DisplayNameFor(m => m.RememberMe)
                </label>
            </div>

            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-outline-success btn-md btn-block" />
            </div>
            
        </form>
        
    </div>
</div>

