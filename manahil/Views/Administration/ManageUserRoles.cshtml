@model List<manahil.ViewModels.UserRolesViewModel>
@{
    ViewData["TitleHeader"] = "Manage User Roles";
    Layout = "~/Views/Shared/_AdLayout.cshtml";
    var userId = ViewBag.userId;
}

<form method="post">
    <div class="card col-lg-6">
        <div class="card-header">
            <h2 class="card-title">Add Or Remove User in Role</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="row m-1">
                    <div class="btn-block">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <input asp-for="@Model[i].RoleId" type="hidden">
                                    <input asp-for="@Model[i].RoleName" type="hidden">
                                    <input asp-for="@Model[i].IsSelected" type="checkbox">
                                </span>
                            </div>
                            <label asp-for="@Model[i].IsSelected" class="form-control">@Model[i].RoleName</label>
                            @*<input type="text" asp-for="@Model[i].IsSelected" value="" disabled class="form-control">*@

                            @*Start edit role user submit*@

                        </div>
                        <!-- /input-group -->
                    </div>
                </div>
            }
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="card-footer">
            
            <input type="submit" value="Update" asp-action="ManageUserRoles" asp-controller="Administration" asp-route-userid="@userId" class="btn btn-outline-success btn-block">
            <a asp-action="EditUser" asp-controller="Administration" asp-route-id="@userId" class="btn btn-outline-info btn-block">Cancel</a>
        </div>
    </div>
</form>