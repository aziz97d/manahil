@model manahil.ViewModels.ResetPasswordViewModel
@{
    ViewData["TitleHeader"] = "Forgot Password";
    Layout = "~/Views/Shared/_AdLayout.cshtml";
}

<div class="row d-flex justify-content-center">
    <div class="col-md-4 border rounded border-success">
        <form asp-action="ResetPassword" class="p-2">
            <h3 class="text-center text-success d-block">Reset Password</h3>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Email" hidden class="form-control"  />
            <input asp-for="Token" hidden class="form-control"  />
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control"  />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input asp-for="ConfirmPassword" class="form-control"  />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Reset Password" class="btn btn-outline-success btn-md btn-block" />
            </div>

        </form>

    </div>
</div>

