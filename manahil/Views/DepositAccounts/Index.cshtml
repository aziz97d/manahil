@model IEnumerable<manahil.Models.DepositAccount>

@{
    ViewData["TitleHeader"] = "Deposit";
    Layout = "~/Views/Shared/_AdLayout.cshtml";
}

<form class="card p-2 table-responsive">
    <table id="tbllist" class="table table-striped table-bordered table-sm text-nowrap  table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Donor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DepositCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DepositDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DepositType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DepositAmount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Balance)
                </th>
                <th>
                    <a asp-action="Create" class="btn btn-success d-block">Create Deposit</a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Donor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DepositCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DepositDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DepositType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DepositAmount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Balance)
                    </td>
                    <td class="justify-content-center">
                        <a asp-action="Edit" asp-route-id="@item.DepositAccountId" class="far fa-edit btn btn-warning btn-sm"></a>
                        <span data-toggle="tooltip" title="Transfer!">
                            <a onclick="showInPopupDetails('@Url.Action("ShowAllTransfer","DepositAccounts",new { id=item.DepositAccountId},Context.Request.Scheme)',@item.DepositCode+' All Transfer')" class="fas fa-arrow-alt-circle-up btn btn-info btn-sm"></a>
                        </span>

                        <a asp-action="Delete" asp-route-id="@item.DepositAccountId" class="far fa-trash-alt btn btn-warning btn-sm"></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>


@section Scripts{


    <script>
        $(document).ready(function () {
            $('#tbllist').DataTable({
                "searching": true,
                "paging": true,
                //"ordering": false,
                "order": [[2, "desc"]]
                
            });
        });

                            //$(".search_input").addClass('form-control input-lg col-xs-12');

    </script>
}