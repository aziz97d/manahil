@model manahil.ViewModels.ForgotPasswordViewModel
@{
    ViewData["TitleHeader"] = "Forgot Password";
    Layout = "~/Views/Shared/_AdLayout.cshtml";
}

<div class="row d-flex justify-content-center">
    <div class="col-md-4 border rounded border-success">
        <form asp-action="ForgotPassword" class="p-2">
            <h3 class="text-center text-success d-block">Forgot Password</h3>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Send" class="btn btn-outline-success btn-md btn-block" />
            </div>
            
        </form>

    </div>
</div>

