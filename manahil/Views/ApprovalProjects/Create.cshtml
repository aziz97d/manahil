@model manahil.Models.ApprovalProjects

@{
    ViewData["TitleHeader"] = "Create Approval Project";
    Layout = "~/Views/Shared/_AdLayout.cshtml";
}
<div class="card card-success border border-success">
    <div class="card-header">

    </div>
    <div class="row">
        <div class="card-body">
            <form asp-action="Create">


                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                @if (Model != null)
                {
                    <input type="hidden" asp-for="ApprovalProjectId" />
                }
